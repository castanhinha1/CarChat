<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palette_lightwhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <LinearLayout android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
                app:civ_border_color="#FF000000"/>


        </LinearLayout>

        <TextView
            android:id="@+id/current_client_text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="New Text" />

        <TextView
            android:id="@+id/current_client_object_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_client_text_view_name"
            android:textSize="12sp"
            android:text="New Text"
            android:layout_toRightOf="@+id/thumbnail"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/deleteButton"
                android:layout_alignParentRight="true"
                android:id="@+id/confirmButton"
                android:background="@color/com_facebook_blue"
                android:textColor="@color/palette_darkwhite"
                android:text="Confirm"
                android:textSize="10sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/deleteButton"
                android:layout_alignRight="@+id/confirmButton"
                android:background="@color/palette_lightwhite"
                android:textColor="@color/palette_primarytextcolor"
                android:text="Delete"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>